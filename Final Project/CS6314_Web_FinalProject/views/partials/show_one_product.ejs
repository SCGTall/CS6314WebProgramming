<!-- breadcrumb -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-light">
    <li class="breadcrumb-item"><a href="/" class="text-dark">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Product</li>
  </ol>
</nav>

<!-- Product Info -->
<div class="row mr-0">
  <div class="col-12 col-lg-6 col-sm-12 mb-5 rounded">
    <div class="bg-light rounded px-3 py-3 h-100">
      <img class="w-100 h-100" src="/images/<%= product.image %>" alt="<%= product.productName %> Picture">
    </div>
  </div>
  <div class="col-12 col-lg-6 col-sm-12 mb-5 rounded bg-light">
    <div class="p-5">
      <!-- product name -->
      <h1><%= product.productName %></h1>
      <!-- product description -->
      <p><%= product.description %></p>
      <% product.categories.forEach(function(category){ %>
      <!--product category -->
      <a href="#" class="badge badge-secondary float-right mr-1 mb-1"><%= category %></a>
      <% }); %>
      <br>
      <div class="row">
        <div class="col-6">
          <!-- shopcart form -->
            <!-- select number -->
            <div class="dropdown my-3 pt-2 float-left">
              <button id="cartNum" class="btn btn-outline-secondary dropdown-toggle px-4" type="button"
                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                &nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;&nbsp;
              </button>
              <div class="dropdown-menu overflow-auto" style="max-height: 140px;" aria-labelledby="dropdownMenuButton">
                <% for (var i = 1; i <= product.storeNum; i++) {%>
                <a class="dropdown-item"><%= i %></a>
                <% } %>
              </div>
            </div>

        </div>
        <div class="col-6">
          <!-- product price -->
          <h4 class="mt-3 mb-1 float-right mr-1 pt-2">$<%= product.productPrice %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-6">

          <!-- admin edit -->
          <% if (user.category == "admin") { %>
          <a href="/products/<%= product.productID %>/edit" class="btn btn-warning float-left mb-5 px-4"><i
              class="fas fa-edit mr-2"></i>Edit</a>
        </div>
          <% } else { %>


          <form id="addCart" action="/shopcart/add" method="POST">
            <input hidden name="productID" value="<%= product.productID %>">
            <input hidden name="num" value="1">
          </form>
          <button onclick="document.getElementById('addCart').submit();" class="btn btn-warning float-left mb-5 px-4"><i
            class="fas fa-shopping-cart mr-2"></i>Add</button>
          </div>
          <div class="col-6">
  
            <!-- favorite -->
            <form id="addFavorite" action="/favorite/add" method="POST">
              <input hidden name="productID" value="<%= product.productID %>">
            </form>
            <a onclick="document.getElementById('addFavorite').submit();">
              <h3 class="float-right"><i class="far fa-heart mr-1 pr-1 text-danger"></i></h3>
            </a>
  
          </div>
          <% } %>



      </div>
    </div>
  </div>
</div>
</div>