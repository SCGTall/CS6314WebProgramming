<%- include ('partials/header') %>

<div class="container">

<h3><%= title %></h3>

<form action="<%= action %>" method="POST">

<div class="form-group">
	<input type="text" name="title" value="<%= video.title %>" placeholder="title" class="form-control">
</div>
<div class="form-group">
	<input type="text" name="genre" value="<%= video.genre %>" placeholder="genre" class="form-control">
</div>
<div class="form-group">
	<input type="text" name="image" value="<%= video.image %>" placeholder="image" class="form-control">
</div>
<div class="form-group">
	<textarea name="desc" placeholder="description" class="form-control"><%= video.description %></textarea>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info">Save</button>
</div>

</form>

<a href="<%= backtrack %>">Cancel</a>

</div>

<%- include ('partials/footer') %>